<Page x:Class="Lab9MultiStepForm.Pages.AddressPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Адрес">
    <StackPanel Margin="20">
        <TextBlock Text="Город:"/>
        <TextBox x:Name="CityBox" Margin="0 0 0 10"/>
        <TextBlock Text="Улица:"/>
        <TextBox x:Name="StreetBox" Margin="0 0 0 10"/>
        <TextBlock Text="Дом:"/>
        <TextBox x:Name="HouseBox" Margin="0 0 0 10"/>
        <TextBlock Text="Квартира (необязательно):"/>
        <TextBox x:Name="FlatBox" Margin="0 0 0 20"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Назад" Width="80" Margin="0 0 10 0"
                    Click="Back_Click"/>
            <Button Content="Отправить" Width="90" Click="Submit_Click"/>
        </StackPanel>
    </StackPanel>
</Page>
