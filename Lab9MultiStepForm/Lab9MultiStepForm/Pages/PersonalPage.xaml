<Page x:Class="Lab9MultiStepForm.Pages.PersonalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Личные данные">
    <StackPanel Margin="20">
        <TextBlock Text="Имя:"/>
        <TextBox x:Name="FirstNameBox" Margin="0 0 0 10"/>
        <TextBlock Text="Фамилия:"/>
        <TextBox x:Name="LastNameBox" Margin="0 0 0 10"/>
        <TextBlock Text="Дата рождения:"/>
        <DatePicker x:Name="BirthDatePicker" Margin="0 0 0 20"/>
        <Button Content="Далее" Width="80" HorizontalAlignment="Right"
                Click="Next_Click"/>
    </StackPanel>
</Page>
